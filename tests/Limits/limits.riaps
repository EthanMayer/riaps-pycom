// RIAPS resource limiter test

app Limits {
	message Dummy;
	
	// CPULimit test component
    component CPULimit {
      timer ticker 1000; 
    }

	// MemLimit test component
    component MemLimit {
      timer ticker 1000; 
    }
    
    // SpcLimit test component
    component SpcLimit {
      timer ticker 1000; 
    }
    

    // LimitActor
    actor LimitActor {
    	uses {
			// cpu max 10 % over 1;			// Hard limit, w/o 'max' = soft limit
			// mem 200 MB;					// Mem limit
			space 10 MB;					// File space limit
			// net max 100 kB over 10 sec;	// Net cap limit
		}
      	{
          // cpuLimited: CPULimit;
          // memLimited : MemLimit;
          spcLimited : SpcLimit; 	
       	}
    }

}
